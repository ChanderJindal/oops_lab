// e name, address as character string,
//age as int, salary as float and contains inline function to set the values and display it.
class personal_info{
string name , address;
int age ;
float salary;
public:
    void give_info(string name, string address , int age, float salary){
    this->name = name;
    this->address = address;
    this->age = age;
    this->salary = salary;
    }
    void get_info(){
    cout<<"Mr./Mrs. "<<name<<" who lives at "<<address<<" and is "<<age<<" years old, earns "<<salary<<" per month."<<endl;
    return;
    }
};

string random_string_generator(){
int str_size = rand()%100;
string s = "";
while(str_size-->0){
    char ch = 'a' + rand()%26;
    s = s + ch;
}
s[0] = s[0] + 'A' - 'a';
return s;
}

void exp_2(){ // name, address,age,salary one
cout<<"This is EXP 02 "<<endl;
cout<<"Write a program to take name, address as character string, age as int, salary as float and contains inline function to set the values and display it."<<endl;
cout<<"__________________________"<<endl;
personal_info person_1;
string s1 = random_string_generator(), s2 = random_string_generator();
int age = rand()%100;
float salary = (rand()%100000000)/100;
cout<<"Input given is "<<endl;
cout<<"Name -> "<<s1<<endl;
cout<<"Address -> "<<s2<<endl;
cout<<"Age -> "<<age<<endl;
cout<<"Salary -> "<<salary<<endl;
cout<<"~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"<<endl;
person_1.give_info(s1,s2,age,salary);
person_1.get_info();
return;
}

int main(){
srand(time(0));
exp_2();
    return 0;
}

