#include <bits/stdc++.h>

using namespace std;

class two{
int a, b;
public:
    void get(int a, int b){
    this->a = a;
    this->b = b;
    }
friend inline int larger(two var);
};

inline int larger(two var){
return (var.a>var.b) ? var.a:var.b;
}

void exp_10(){
cout<<"This is EXP 10"<<endl;
cout<<"____________"<<endl;
cout<<"Write a program to demonstrate the use of friend function with Inline assignment."<<endl;
cout<<"____________"<<endl;
two one;
int a = rand() , b = rand();
one.get(a,b);
cout<<"Two chosen numbers are "<<a<<" "<<b<<". As per the function the Larger one is : "<<larger(one)<<endl;
return;
}

int main(){
srand(time(0));
exp_10();
    return 0;
}
