#include <iostream>
#include <bits/stdc++.h>
#define u unsigned
#define fast  ios_base::sync_with_stdio(false);cin.tie(NULL);
#define lli long long int
#define lf long double
#define mod 1000000007
#define pi 3.14159
#define si short int
using namespace std;

typedef vector<float> VF;
typedef vector<string> VS;

class TIME{
u si hour,minute,sec;
public:
    void give_val(u si h, u si m ,u si s){
    this->hour = h;
    this->minute = m;
    this->sec = s;
    minute += sec/60;
    sec %= 60;
    hour += minute/60;
    minute %= 60;
    hour %= 24;
    }
    void get_val(){
    cout<<"The Current time is "<<hour<<":"<<minute<<":"<<sec<<endl;
    }
    TIME operator + ( TIME second){
    TIME first;
    first.sec = this->sec + second.sec;
    first.minute = this->minute + second.minute + first.sec/60;
    first.sec %= 60;
    first.hour = this->hour + second.hour + first.minute/60;
    first.minute %= 60;
    first.hour %= 24;
    return first;
    }
};

void exp_5(){
cout<<"This is EXP 05 "<<endl;
cout<<"To create a class TIME with members hours, minutes and seconds. Take input, add two-time objects and passing objects to function and display the result."<<endl;
cout<<"____________"<<endl;
TIME first,second;
cout<<"The Values given are :- "<<endl;
int temp1 = rand()%100 ,temp2 = rand()%100 ,temp3 = rand()%100;
first.give_val(temp1,temp2,temp3);
cout<<"First set of Values are "<<temp1<<":"<<temp2<<":"<<temp3<<endl;
temp1 = rand()%100 ,temp2 = rand()%100 ,temp3 = rand()%100;
second.give_val(2,4,1);
cout<<"Second set of Values are "<<temp1<<":"<<temp2<<":"<<temp3<<endl;
cout<<"~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"<<endl;
cout<<"As per the Code the result is :- "<<endl;
first.get_val();
second.get_val();
TIME third = first + second;
third.get_val();
return;
}

int main(){
srand(time(0));
exp_5();
    return 0;
}

