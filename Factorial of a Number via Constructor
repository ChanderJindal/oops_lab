#include <bits/stdc++.h>
#define u unsigned
#define si short int

using namespace std;

int fact(int n , int len , u si arr[]){
int carry = 0;
for(int i = 2 ; i <= n ; i++){
    for(int j = 0; j < len; j++){
        carry = arr[j]*i + carry;
        arr[j] = carry%10;
        carry  /= 10;
    }
while(carry > 0){
    arr[len] = carry%10;
    carry /= 10;
    ++len;
}
}
return len;
}

class factorial{
int number,len;
u si arr[1000];
public:
void give_number(int number){
this->number = number;
memset(arr,0,sizeof(arr));
arr[0] = 1;
len = fact(number,1,arr);
return;
}
void get_factoial(){
while(len-->0)
    cout<<arr[len];
cout<<endl;
return;
}
};

void exp_07(){
cout<<"This is EXP 07"<<endl;
cout<<"____________"<<endl;
cout<<"Write a program to enter any number and find its factorial using constructor."<<endl;
cout<<"____________"<<endl;
factorial facto;
int numb = rand()%100;
cout<<"The number Chosen via rand() is "<<numb<<". As per the Constructor Call, it's Factorial is ";
facto.give_number(numb); //120
facto.get_factoial();
}

int main(){
srand(time(0));
exp_07();
    return 0;
}
