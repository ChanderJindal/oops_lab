#include <iostream>
#include <bits/stdc++.h>
#define u unsigned
#define fast  ios_base::sync_with_stdio(false);cin.tie(NULL);
#define lli long long int
#define lf long double
#define mod 1000000007
#define pi 3.14159
#define si short int
using namespace std;

typedef vector<float> VF;
typedef vector<string> VS;

string random_string_generator(){
int str_size = rand()%100;
string s = "";
while(str_size-->0){
    char ch = 'a' + rand()%26;
    s = s + ch;
}
s[0] = s[0] + 'A' - 'a';
return s;
}

class student{
string name,branch,subject_list[5],roll_no;
int age;
float subject_marks[5];
char sex;
VF marks_lst;
VS sub_lst;
public:
    void give_basic_info(string name,string branch,string roll_no,int age, char sex){
    this->name = name;
    this->branch = branch;
    this->roll_no = roll_no;
    this->age = age;
    this->sex = sex;
    }
    void get_basic_info(){
    cout<<"Student "<<name<<" ("<<sex<<"), "<<age<<", "<<branch<<endl;
    cout<<"______________"<<endl;
    cout<<roll_no<<endl;
    }
    void give_subject_info(string sub_name[5],float sub_marks[5]){
    for(int i = 0 ; i < 5; i++){
    subject_list[i] = sub_name[i];
    subject_marks[i] = sub_marks[i];
    }
    }

    void get_subject_info(){
    cout<<"The Student has received the following scores :- "<<endl;
    cout<<"______________"<<endl;
    cout<<"Subject -> Score"<<endl;
    double total = 0;
    for(int i = 0 ; i < 5; i++){
        cout<<"______________"<<endl;
        cout<<subject_list[i]<<" -> "<<subject_marks[i]<<endl;
        total += subject_marks[i];
    }
    cout<<"______________"<<endl;
    cout<<"Thus, has a Total Score of "<<total<<" with "<<total/5<<" % Marks"<<endl;
   // printf("%.2f % Marks \n",total/5);
    }
};

void exp_4(){
student st_1;
string name = random_string_generator(),branch = random_string_generator(),sub_lst[5];
int age = rand()%25;
float sub_marks[5];
for(int i = 0 ; i<5;i++){
    sub_lst[i] = random_string_generator();
    sub_marks[i] = float( (rand()%10000) ) /100.0;
}
char sex;
int temp = rand()%3;
if(temp == 0)
    sex = 'M';
if(temp == 1)
    sex = 'F';
if(temp == 2)
    sex = 'T';
    string r_n = "1";
for(int i = 0 ; i < 9 ; i++){
    temp = rand()%10;
    char ch = '0' + temp;
    r_n = r_n + ch;
}
cout<<"Values Given are :- "<<endl;
cout<<"Name -> "<<name<<endl;
cout<<"Roll No. -> "<<r_n<<endl;
cout<<"Branch -> "<<branch<<endl;
cout<<"Age -> "<<age<<endl;
cout<<"Sex -> "<<sex<<endl;
cout<<"____________"<<endl;
cout<<"Subject Name -> Subject Marks"<<endl;
for(int i = 0 ; i<5;i++){
cout<<sub_lst[i]<<" -> "<<sub_marks[i]<<endl;
cout<<"____________"<<endl;
}
cout<<"~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"<<endl;
st_1.give_basic_info(name,branch,r_n,age,sex);
st_1.give_subject_info(sub_lst,sub_marks);
st_1.get_basic_info();
st_1.get_subject_info();
}

int main(){
srand(time(0));
exp_4();
    return 0;
}

